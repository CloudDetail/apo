{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "checkJs": true,
    "allowJs": true,
    "jsx": "react-jsx",

    "types": ["react", "react-dom"],
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",

    "allowSyntheticDefaultImports": true,
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/core/components/*"],
      "core/*": ["src/core/*"],
      "pro/*": ["src/pro/*"]
    }
  },
  "include": ["src"]
}
